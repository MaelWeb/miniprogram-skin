<!--index.wxml-->
<wxs src="../../theme/variable.wxs" module="getVariable" />

<view class="container {{theme}}">
  <button class="btn">小程序换肤</button>

  <radio-group bindchange="radioChange" class="page-section">
    <view class="page-section-title">选择主题</view>
    <label class="radio">
      <radio value="light" checked="true" color="{{getVariable(theme)['@theme-color']}}" />亮色主题
    </label>
    <label class="radio">
      <radio value="dark" color="{{getVariable(theme)['@theme-color']}}" />暗色主题
    </label>
  </radio-group>
</view>
